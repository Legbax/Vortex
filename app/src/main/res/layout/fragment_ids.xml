<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_imei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IMEI 1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_imei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_imei2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IMEI 2">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_imei2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_imsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IMSI">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_imsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_iccid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ICCID">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_iccid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_android_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Android ID">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_android_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_gaid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Google Advertising ID">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_gaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_gsf_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GSF ID">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_gsf_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_serial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Serial Number">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_serial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_wifi_mac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wi-Fi MAC">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_wifi_mac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_bt_mac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bluetooth MAC">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_bt_mac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_gmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gmail">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_gmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_generate_random"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Randomize All" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save IDs" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
