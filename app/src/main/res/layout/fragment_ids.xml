<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vortex_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDENTITY SPOOFING"
            android:textColor="@color/vortex_text_secondary"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp"
            app:drawableStartCompat="@drawable/ic_ids"
            android:drawablePadding="8dp"
            app:drawableTint="@color/vortex_accent" />

        <!-- Cellular IDs -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/vortex_card_background"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cellular Identifiers"
                    android:textColor="@color/vortex_accent"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_imei"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="IMEI (Slot 1)"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_imei"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_imei2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="IMEI (Slot 2)"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_imei2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_imsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="IMSI"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_imsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_iccid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ICCID (Sim Serial)"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_iccid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"
                        android:inputType="phone"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Hardware IDs -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/vortex_card_background"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hardware &amp; System"
                    android:textColor="@color/vortex_accent"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_android_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Android ID (Global)"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_android_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_ssaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SSAID (Snapchat)"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_ssaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_gaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Google Advertising ID (GAID)"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_gaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_gsf_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="GSF ID"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_gsf_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_media_drm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Media DRM ID"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_media_drm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_serial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Serial Number"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_serial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_wifi_mac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Wifi MAC"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_wifi_mac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_bt_mac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bluetooth MAC"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bt_mac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_gmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gmail Account"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/vortex_text_secondary"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_refresh"
                    app:endIconTint="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_gmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_generate_random"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RANDOMIZE ALL"
            android:backgroundTint="@color/vortex_accent"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE SETTINGS"
            android:backgroundTint="@color/vortex_accent"
            android:textColor="@color/vortex_text_primary"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/vortex_accent"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>