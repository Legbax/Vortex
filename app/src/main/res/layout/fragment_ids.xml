<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vortex_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Identity"
            android:textColor="@color/vortex_text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Action Bar -->
        <Button
            android:id="@+id/btn_randomize_all"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/vortex_accent"
            android:text="Randomize All"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_refresh"
            app:iconGravity="textStart"
            app:iconTint="#000000" />

        <!-- Legacy Randomize Button ID for compatibility if needed, or update Kotlin to use btn_randomize_all -->
        <Button
            android:id="@+id/btn_generate_random"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />

        <!-- ID Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <!-- IMEI 1 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_imei"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="IMEI 1"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_check_circle"
                app:endIconTint="@color/vortex_success">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_imei"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="864981045239102"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- IMEI 2 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_imei2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="IMEI 2"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_imei2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- IMSI -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_imsi"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="IMSI"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_imsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

             <!-- ICCID -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_iccid"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="ICCID"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_iccid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

             <!-- Phone -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Phone Number"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Android ID -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_android_id"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Android ID"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_android_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="f92a392b19284"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- SSAID -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_ssaid"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="SSAID"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_ssaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Google Ad ID -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_gaid"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Google Ad ID"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_gaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="38400000-8cf0-11bd-b23e-10b96e4ef00d"
                    android:textSize="12sp"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- GSF ID -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_gsf_id"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="GSF ID"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_gsf_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Media DRM -->
             <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_media_drm"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Media DRM ID"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_media_drm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Serial -->
             <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_serial"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Serial Number"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_serial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Wifi MAC -->
             <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_wifi_mac"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="WiFi MAC"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_wifi_mac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- BT MAC -->
             <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_bt_mac"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Bluetooth MAC"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_bt_mac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Gmail -->
             <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_gmail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Gmail"
                app:boxBackgroundColor="@color/vortex_card_background"
                app:boxStrokeColor="@color/vortex_accent"
                app:hintTextColor="@color/vortex_accent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_gmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/vortex_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE SETTINGS"
            android:backgroundTint="@color/vortex_accent"
            android:textColor="@color/vortex_text_primary"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/vortex_accent"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
