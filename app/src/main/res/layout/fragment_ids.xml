<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/vortex_background" android:fillViewport="true">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="16dp" android:clipToPadding="false">

        <!-- Header -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:text="System Identifiers"
                style="@style/Vortex.Text.Title" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_generate_random"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="RANDOMIZE ALL" style="@style/Vortex.Button.Text"
                android:textColor="@color/vortex_accent"
                app:icon="@drawable/ic_refresh" app:iconTint="@color/vortex_accent"
                android:padding="0dp"/>
        </LinearLayout>

        <!-- IMEI 1 -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="IMEI (Slot 1)" style="@style/Vortex.Text.Subtitle" android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/til_imei" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.InputLayout"
                    app:endIconMode="custom" app:endIconDrawable="@drawable/ic_refresh" app:endIconTint="@color/vortex_accent"
                    app:startIconDrawable="@drawable/ic_ids" app:startIconTint="@color/vortex_text_secondary">
                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_imei" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="monospace" android:inputType="number" android:textColor="@color/vortex_text_primary" android:focusable="false" android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- IMEI 2 -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="IMEI (Slot 2)" style="@style/Vortex.Text.Subtitle" android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/til_imei2" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.InputLayout"
                    app:endIconMode="custom" app:endIconDrawable="@drawable/ic_refresh" app:endIconTint="@color/vortex_accent"
                    app:startIconDrawable="@drawable/ic_ids" app:startIconTint="@color/vortex_text_secondary">
                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_imei2" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="monospace" android:inputType="number" android:textColor="@color/vortex_text_primary" android:focusable="false" android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Android ID -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Android ID" style="@style/Vortex.Text.Subtitle" android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/til_android_id" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.InputLayout"
                    app:endIconMode="custom" app:endIconDrawable="@drawable/ic_refresh" app:endIconTint="@color/vortex_accent"
                    app:startIconDrawable="@drawable/ic_ids" app:startIconTint="@color/vortex_text_secondary">
                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_android_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="monospace" android:textColor="@color/vortex_text_primary" android:focusable="false" android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SSAID (Snapchat) -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SSAID (Snapchat)" style="@style/Vortex.Text.Subtitle" android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/til_ssaid" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.InputLayout"
                    app:endIconMode="custom" app:endIconDrawable="@drawable/ic_refresh" app:endIconTint="@color/vortex_accent"
                    app:startIconDrawable="@drawable/ic_snapchat" app:startIconTint="@color/vortex_text_secondary">
                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_ssaid" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="monospace" android:textColor="@color/vortex_text_primary" android:focusable="false" android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- GAID -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Advertising ID (GAID)" style="@style/Vortex.Text.Subtitle" android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/til_gaid" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.InputLayout"
                    app:endIconMode="custom" app:endIconDrawable="@drawable/ic_refresh" app:endIconTint="@color/vortex_accent"
                    app:startIconDrawable="@drawable/ic_ids" app:startIconTint="@color/vortex_text_secondary">
                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_gaid" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="monospace" android:textColor="@color/vortex_text_primary" android:focusable="false" android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- GSF ID -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="GSF ID" style="@style/Vortex.Text.Subtitle" android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/til_gsf_id" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.InputLayout"
                    app:endIconMode="custom" app:endIconDrawable="@drawable/ic_refresh" app:endIconTint="@color/vortex_accent"
                    app:startIconDrawable="@drawable/ic_gms" app:startIconTint="@color/vortex_text_secondary">
                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_gsf_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="monospace" android:textColor="@color/vortex_text_primary" android:focusable="false" android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- MediaDRM -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MediaDRM Device ID" style="@style/Vortex.Text.Subtitle" android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/til_media_drm" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.InputLayout"
                    app:endIconMode="custom" app:endIconDrawable="@drawable/ic_refresh" app:endIconTint="@color/vortex_accent"
                    app:startIconDrawable="@drawable/ic_device" app:startIconTint="@color/vortex_text_secondary">
                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_media_drm" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="monospace" android:textColor="@color/vortex_text_primary" android:focusable="false" android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Serial -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Serial Number" style="@style/Vortex.Text.Subtitle" android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/til_serial" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.InputLayout"
                    app:endIconMode="custom" app:endIconDrawable="@drawable/ic_refresh" app:endIconTint="@color/vortex_accent"
                    app:startIconDrawable="@drawable/ic_device" app:startIconTint="@color/vortex_text_secondary">
                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_serial" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="monospace" android:textColor="@color/vortex_text_primary" android:focusable="false" android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Gmail -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gmail Account" style="@style/Vortex.Text.Subtitle" android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/til_gmail" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Vortex.InputLayout"
                    app:endIconMode="custom" app:endIconDrawable="@drawable/ic_refresh" app:endIconTint="@color/vortex_accent"
                    app:startIconDrawable="@drawable/ic_ids" app:startIconTint="@color/vortex_text_secondary">
                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_gmail" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textEmailAddress" android:textColor="@color/vortex_text_primary" android:focusable="false" android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="SAVE IDENTIFIERS" android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/vortex_card_background"
            app:strokeColor="@color/vortex_accent"
            app:strokeWidth="1dp"
            android:textColor="@color/vortex_accent"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            android:padding="12dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
