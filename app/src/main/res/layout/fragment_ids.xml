<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vortex_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ids_identifiers"
                style="@style/Vortex.Text.Title" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_randomize_all_ids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ids_randomize_all"
                style="@style/Vortex.Button.Text"
                android:textColor="@color/vortex_accent"
                app:icon="@drawable/ic_refresh"
                app:iconTint="@color/vortex_accent" />
        </LinearLayout>

        <!-- IMEI -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Vortex.Card">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ids_imei"
                        style="@style/Vortex.Text.Subtitle" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ids_validate_valid"
                        android:textColor="@color/vortex_success"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_indicator_active"
                        android:backgroundTint="@color/vortex_card_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_imei"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Vortex.InputLayout"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_random"
                    app:endIconTint="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_imei"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:textColor="@color/vortex_text_primary"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Android ID -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Vortex.Card">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ids_android_id"
                    style="@style/Vortex.Text.Subtitle"
                    android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_android_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Vortex.InputLayout"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_random"
                    app:endIconTint="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_android_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- GSF ID -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Vortex.Card">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ids_gsf"
                    style="@style/Vortex.Text.Subtitle"
                    android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_gsf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Vortex.InputLayout"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_random"
                    app:endIconTint="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_gsf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- GAID (Advertising ID) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Vortex.Card">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advertising ID (GAID)"
                    style="@style/Vortex.Text.Subtitle"
                    android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_gaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Vortex.InputLayout"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_random"
                    app:endIconTint="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_gaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

         <!-- Serial -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Vortex.Card">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ids_serial"
                    style="@style/Vortex.Text.Subtitle"
                    android:layout_marginBottom="8dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_serial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Vortex.InputLayout"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_random"
                    app:endIconTint="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_serial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>