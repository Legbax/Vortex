<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/vortex_background">

    <!-- Hero Image / Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="24dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_nav_device"
            app:tint="@color/vortex_accent"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEVICE IDENTITY"
            style="@style/Vortex.Text.SectionHeader"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.2"/>
    </LinearLayout>

    <!-- Current Device Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        style="@style/Vortex.Card">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Faded Background Icon (kept for texture) -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_nav_device"
                app:tint="@color/vortex_accent"
                android:alpha="0.05"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="-20dp"
                android:layout_marginEnd="-20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVE FINGERPRINT"
                    style="@style/Vortex.Text.SectionHeader"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_current_device_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Redmi 9"
                    style="@style/Vortex.Text.Title"
                    android:textSize="28sp"
                    android:textColor="@color/vortex_accent"/>

                <TextView
                    android:id="@+id/tv_current_device_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xiaomi Â· Android 11"
                    style="@style/Vortex.Text.Subtitle"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        style="@style/Vortex.Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch Profile"
        android:layout_marginBottom="12dp"
        android:textSize="18sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_profile_selector"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Device Profile"
        android:textColorHint="@color/vortex_text_secondary"
        app:boxStrokeColor="@color/vortex_accent"
        app:hintTextColor="@color/vortex_accent"
        app:boxBackgroundColor="@color/vortex_card_background"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconTint="@color/vortex_text_secondary">

        <AutoCompleteTextView
            android:id="@+id/actv_profile_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="@color/vortex_text_primary"
            android:text="Redmi 9 (Global)"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_apply_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APPLY PROFILE"
        android:backgroundTint="@color/vortex_accent"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:padding="14dp"
        app:cornerRadius="12dp"
        android:stateListAnimator="@null"/>

    <TextView
        style="@style/Vortex.Text.SectionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECENT PROFILES"
        android:layout_marginBottom="8dp"
        android:letterSpacing="0.1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recent_profiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

</LinearLayout>
