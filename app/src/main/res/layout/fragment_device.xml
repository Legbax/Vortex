<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/vortex_background">

    <!-- Current Device Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        style="@style/Vortex.Card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURRENT DEVICE"
                style="@style/Vortex.Text.SectionHeader"
                android:layout_marginBottom="12dp"
                app:drawableStartCompat="@drawable/ic_device"
                android:drawablePadding="8dp"
                app:drawableTint="@color/vortex_text_secondary"/>

            <TextView
                android:id="@+id/tv_current_device_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redmi 9"
                style="@style/Vortex.Text.Title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_current_device_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xiaomi Â· Android 11"
                style="@style/Vortex.Text.Subtitle"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        style="@style/Vortex.Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_select_profile"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_profile_selector"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Device Fingerprint"
        android:textColorHint="@color/vortex_text_secondary"
        app:boxStrokeColor="@color/vortex_accent"
        app:hintTextColor="@color/vortex_accent">

        <AutoCompleteTextView
            android:id="@+id/actv_profile_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="@color/vortex_text_primary" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_apply_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APPLY PROFILE"
        android:backgroundTint="@color/vortex_accent"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp" />

    <TextView
        style="@style/Vortex.Text.SectionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECENT PROFILES"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recent_profiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

</LinearLayout>
