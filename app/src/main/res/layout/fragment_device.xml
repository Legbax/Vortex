<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vortex_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false">

        <!-- Header with Device Visual -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                style="@style/Vortex.Card"
                app:cardBackgroundColor="#1A1D24"
                app:strokeColor="@android:color/transparent">

                <!-- Background Gradient/Effect -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_nav_device"
                    android:scaleType="centerCrop"
                    android:alpha="0.03"
                    app:tint="@color/vortex_accent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_nav_device"
                        app:tint="@color/vortex_accent"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/tv_current_device_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Redmi 9"
                        style="@style/Vortex.Text.Title"
                        android:textSize="24sp"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tv_current_device_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xiaomi Â· Android 11"
                        style="@style/Vortex.Text.Subtitle"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <!-- Profile Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEVICE PROFILE"
            style="@style/Vortex.Text.SectionHeader"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_profile_selector"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Profile"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="@color/vortex_text_secondary"
            android:layout_marginBottom="16dp">

            <AutoCompleteTextView
                android:id="@+id/actv_profile_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@color/vortex_text_primary"
                android:text="Redmi 9 (Global)"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APPLY CONFIGURATION"
            android:backgroundTint="@color/vortex_accent"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            android:padding="14dp"
            android:layout_marginBottom="32dp"/>

        <!-- Recent Profiles -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECENTLY USED"
            style="@style/Vortex.Text.SectionHeader"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recent_profiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
