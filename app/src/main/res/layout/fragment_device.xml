<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/vortex_background">

    <TextView
        style="@style/Vortex.Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_select_profile"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_random_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Random Profile"
        android:backgroundTint="@color/vortex_accent"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_devices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false" />

</LinearLayout>
