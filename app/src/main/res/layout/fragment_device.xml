<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vortex_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_device_profile"
            style="@style/Vortex.Text.Title"
            android:layout_marginBottom="16dp" />

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/device_search_hint"
            style="@style/Vortex.InputLayout"
            app:startIconDrawable="@drawable/ic_status"
            app:startIconTint="@color/vortex_text_secondary"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/vortex_text_primary"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Current Profile Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_current_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Vortex.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_current_device_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pixel 5 (Redfin)"
                            style="@style/Vortex.Text.Title"
                            android:textSize="18sp" />
                        <TextView
                            android:text="ACTIVE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/vortex_success"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_save"
                        app:tint="@color/vortex_accent"
                        android:padding="4dp" />
                </LinearLayout>

                <!-- Full Fingerprint Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#4D000000"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/vortex_divider">

                    <TextView
                        android:id="@+id/tv_full_fingerprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="google/redfin/redfin:11/RQ3A.210805.001.A1/7512229:user/release-keys"
                        android:fontFamily="monospace"
                        android:textSize="10sp"
                        android:textColor="@color/vortex_text_secondary" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/vortex_divider"
                    android:layout_marginBottom="12dp" />

                <!-- Details Rows -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/device_brand"
                        style="@style/Vortex.Text.Subtitle" />
                    <TextView
                        android:id="@+id/tv_current_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google"
                        android:textColor="@color/vortex_text_primary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/device_os_version"
                        style="@style/Vortex.Text.Subtitle" />
                    <TextView
                        android:id="@+id/tv_current_os"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android 11"
                        android:textColor="@color/vortex_text_primary" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Randomize Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_randomize_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_randomize"
            app:icon="@drawable/ic_random"
            app:iconGravity="textStart"
            style="@style/Vortex.Button"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AVAILABLE PROFILES"
            style="@style/Vortex.Text.SectionHeader"
            android:layout_marginBottom="8dp" />

        <!-- List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_devices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_device"
            tools:itemCount="3" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>