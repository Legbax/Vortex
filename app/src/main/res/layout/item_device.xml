<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_device"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/vortex_card_background"
    app:cardCornerRadius="12dp"
    app:strokeColor="#1AFFFFFF"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Avatar -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_circle"
                android:backgroundTint="#332196F3">

                <TextView
                    android:id="@+id/tv_initials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="MI"
                    android:textColor="#42A5F5"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Redmi 9"
                    android:textColor="@color/vortex_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_device_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lancelot"
                    android:textColor="@color/vortex_text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_selected"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                app:tint="@color/vortex_accent"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Expanded Details -->
        <LinearLayout
            android:id="@+id/layout_expanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_card_normal"> <!-- Using existing drawable or similar for separator line, or just view -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1AFFFFFF"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fingerprint:"
                android:textColor="@color/vortex_accent"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_fingerprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redmi/lancelot/..."
                android:textColor="@color/vortex_text_secondary"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Board:"
                android:textColor="@color/vortex_text_secondary"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lancelot"
                android:textColor="@color/vortex_text_secondary"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btn_randomize_build"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Randomize Build"
                android:textColor="@color/vortex_accent"
                android:backgroundTint="@color/vortex_accent_20"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
