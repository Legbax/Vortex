<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_device"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Vortex.Card"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_device"
            android:padding="8dp"
            android:background="@drawable/bg_icon_circle"
            app:tint="@color/vortex_text_secondary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Vortex.Text.Title"
                android:textSize="16sp"
                android:text="Pixel 5" />

            <TextView
                android:id="@+id/tv_device_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Vortex.Text.Subtitle"
                android:textSize="12sp"
                android:text="Android 11 (API 30)" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_status"
            app:tint="@color/vortex_text_secondary"
            android:rotation="90" /> <!-- Chevron placeholder -->

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>