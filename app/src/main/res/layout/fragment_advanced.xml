<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vortex_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADVANCED CONTROLS"
            android:textColor="@color/vortex_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- App Management Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/vortex_card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_advanced"
                        app:tint="@color/vortex_accent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TARGET APPLICATIONS"
                        android:textColor="@color/vortex_text_secondary"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Snapchat -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/cb_snapchat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Snapchat"
                    android:textColor="@color/vortex_text_primary"
                    android:textSize="16sp"
                    android:checked="true"
                    android:drawableStart="@drawable/ic_snapchat"
                    android:drawablePadding="16dp"
                    android:layout_marginBottom="8dp"
                    app:thumbTint="@color/vortex_accent"
                    app:trackTint="@color/vortex_accent_25"/>

                <!-- Play Store -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/cb_play_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Google Play Store"
                    android:textColor="@color/vortex_text_primary"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_play_store"
                    android:drawablePadding="16dp"
                    android:layout_marginBottom="8dp"
                    app:thumbTint="@color/vortex_accent"
                    app:trackTint="@color/vortex_accent_25"/>

                <!-- Play Services -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/cb_gms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Google Play Services"
                    android:textColor="@color/vortex_text_primary"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_gms"
                    android:drawablePadding="16dp"
                    android:layout_marginBottom="24dp"
                    app:thumbTint="@color/vortex_accent"
                    app:trackTint="@color/vortex_accent_25"/>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_force_stop"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="FORCE STOP"
                        android:textColor="@color/vortex_accent"
                        app:backgroundTint="@color/vortex_background"
                        app:strokeColor="@color/vortex_accent_20"
                        app:strokeWidth="1dp"
                        app:cornerRadius="12dp"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_clear_data"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="CLEAR DATA"
                        android:textColor="@color/vortex_error"
                        app:backgroundTint="@color/vortex_error_10"
                        app:strokeColor="@color/vortex_error_20"
                        app:strokeWidth="1dp"
                        app:cornerRadius="12dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- System Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/vortex_card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_device"
                        app:tint="@color/vortex_accent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SYSTEM CONTROLS"
                        android:textColor="@color/vortex_text_secondary"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reboot"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="REBOOT DEVICE"
                    android:textColor="@color/vortex_text_primary"
                    app:icon="@drawable/ic_refresh"
                    app:iconTint="@color/vortex_text_primary"
                    app:iconGravity="textStart"
                    app:backgroundTint="@color/vortex_surface_alt"
                    app:cornerRadius="12dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
