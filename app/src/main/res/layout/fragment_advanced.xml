<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/vortex_background" android:fillViewport="true">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="16dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/advanced_hooks_title" style="@style/Vortex.Text.Title"
            android:layout_marginBottom="16dp" />

        <!-- Hide Root -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
            android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:padding="16dp">
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/advanced_hide_root"
                        style="@style/Vortex.Text.Title" android:textSize="16sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/advanced_hide_root_desc"
                        style="@style/Vortex.Text.Subtitle" android:textSize="12sp" />
                </LinearLayout>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_hide_root"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Hide Debug -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
            android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:padding="16dp">
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/advanced_hide_debug"
                        style="@style/Vortex.Text.Title" android:textSize="16sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/advanced_hide_debug_desc"
                        style="@style/Vortex.Text.Subtitle" android:textSize="12sp" />
                </LinearLayout>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_hide_debug"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Package Manager -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
            android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:padding="16dp">
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Package Manager Hook"
                        style="@style/Vortex.Text.Title" android:textSize="16sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Spoofs installer source to Play Store"
                        style="@style/Vortex.Text.Subtitle" android:textSize="12sp" />
                </LinearLayout>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_packages"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- WebView -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
            android:layout_height="wrap_content" style="@style/Vortex.Card">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:padding="16dp">
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="WebView User-Agent Hook"
                        style="@style/Vortex.Text.Title" android:textSize="16sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Override browser User-Agent string"
                        style="@style/Vortex.Text.Subtitle" android:textSize="12sp" />
                </LinearLayout>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_webview"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_advanced"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/action_save" android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
