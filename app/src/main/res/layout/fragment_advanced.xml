<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vortex_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Advanced"
            android:textColor="@color/vortex_text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- App Management -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/vortex_card_background"
            app:cardCornerRadius="16dp"
            app:strokeColor="#1AFFFFFF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_advanced"
                        app:tint="@color/vortex_accent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="TARGET APPLICATIONS"
                        android:textColor="@color/vortex_text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1" />
                </LinearLayout>

                <!-- Snapchat -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_snapchat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:checked="true"
                    android:text="Snapchat"
                    android:textColor="@color/vortex_text_primary"
                    app:thumbTint="@color/vortex_accent"
                    app:trackTint="@color/vortex_accent_25" />

                <!-- Play Store -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_play_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Google Play Store"
                    android:textColor="@color/vortex_text_primary"
                    app:thumbTint="@color/vortex_accent"
                    app:trackTint="@color/vortex_accent_25" />

                <!-- GMS -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_gms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="Google Play Services"
                    android:textColor="@color/vortex_text_primary"
                    app:thumbTint="@color/vortex_accent"
                    app:trackTint="@color/vortex_accent_25" />

                <!-- Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <Button
                        android:id="@+id/btn_force_stop"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="Force Stop"
                        android:textColor="@color/vortex_accent"
                        app:strokeColor="@color/vortex_accent" />

                    <Button
                        android:id="@+id/btn_clear_data"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="Clear Data"
                        android:textColor="@color/vortex_error"
                        app:strokeColor="@color/vortex_error"
                        app:backgroundTint="#1AFF5252" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- System Controls -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/vortex_card_background"
            app:cardCornerRadius="16dp"
            app:strokeColor="#1AFFFFFF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_device"
                        app:tint="@color/vortex_accent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="SYSTEM CONTROLS"
                        android:textColor="@color/vortex_text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_reboot"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Reboot Device"
                    android:textColor="@color/vortex_text_primary"
                    android:backgroundTint="#2C2C2C"
                    app:icon="@drawable/ic_refresh"
                    app:iconTint="@color/vortex_text_primary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
