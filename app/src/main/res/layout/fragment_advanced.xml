<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/vortex_background" android:fillViewport="true">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="16dp">

        <!-- HOOK CONFIGURATION -->
        <TextView android:text="HOOK CONFIGURATION" style="@style/Vortex.Text.SectionHeader"
            android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView style="@style/Vortex.Card" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">

                <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:text="Hide Root (File/Process)" android:textColor="@color/vortex_text_primary" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                    <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/sw_hide_root" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        app:thumbTint="@color/vortex_accent" app:trackTint="@color/vortex_accent_20"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:text="Hide Debugging" android:textColor="@color/vortex_text_primary" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                    <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/sw_hide_debug" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        app:thumbTint="@color/vortex_accent" app:trackTint="@color/vortex_accent_20"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:text="Hook PackageManager" android:textColor="@color/vortex_text_primary" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                    <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/sw_packages" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        app:thumbTint="@color/vortex_accent" app:trackTint="@color/vortex_accent_20"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:text="Hook WebView UA" android:textColor="@color/vortex_text_primary" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                    <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/sw_webview" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        app:thumbTint="@color/vortex_accent" app:trackTint="@color/vortex_accent_20"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- APP MANAGEMENT -->
        <TextView android:text="APP MANAGEMENT" style="@style/Vortex.Text.SectionHeader"
            android:layout_marginTop="24dp" android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Vortex.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Applications"
                    android:textColor="@color/vortex_accent"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Snapchat -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toStartOf="@+id/cb_snapchat"
                        android:layout_centerVertical="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Snapchat"
                            android:textColor="@color/vortex_text_primary"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deep Hooking &amp; Bypass"
                            android:textColor="@color/vortex_text_secondary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/cb_snapchat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:thumbTint="@color/vortex_accent"
                        app:trackTint="@color/vortex_accent_20"/>
                </RelativeLayout>

                <!-- Play Store -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toStartOf="@+id/cb_play_store"
                        android:layout_centerVertical="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google Play Store"
                            android:textColor="@color/vortex_text_primary"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spoof Package Info"
                            android:textColor="@color/vortex_text_secondary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/cb_play_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:thumbTint="@color/vortex_accent"
                        app:trackTint="@color/vortex_accent_20"/>
                </RelativeLayout>

                <!-- GMS -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toStartOf="@+id/cb_gms"
                        android:layout_centerVertical="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google Play Services"
                            android:textColor="@color/vortex_text_primary"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hide Root &amp; Analytics"
                            android:textColor="@color/vortex_text_secondary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/cb_gms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:thumbTint="@color/vortex_accent"
                        app:trackTint="@color/vortex_accent_20"/>
                </RelativeLayout>

                <!-- Botones de AcciÃ³n -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_force_stop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FORCE STOP"
                        android:backgroundTint="@color/vortex_accent"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_clear_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="CLEAR DATA"
                        android:backgroundTint="@color/vortex_error"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SYSTEM -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYSTEM"
            style="@style/Vortex.Text.SectionHeader"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reboot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REBOOT DEVICE"
            android:backgroundTint="#212121"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            app:icon="@drawable/ic_refresh"
            app:iconTint="#FFFFFF"
            app:cornerRadius="8dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
