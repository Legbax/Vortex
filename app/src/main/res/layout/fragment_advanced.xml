<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/vortex_background">

    <!-- Secci贸n: Gesti贸n de Apps -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APP MANAGEMENT"
        android:textColor="@color/vortex_text_secondary"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/vortex_card_background"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Applications"
                android:textColor="@color/vortex_accent"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:id="@+id/cb_snapchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Snapchat"
                android:checked="true"
                android:textColor="@color/vortex_text_primary"
                android:buttonTint="@color/vortex_accent"/>

            <CheckBox
                android:id="@+id/cb_play_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Play Store"
                android:textColor="@color/vortex_text_primary"
                android:buttonTint="@color/vortex_accent"/>

            <CheckBox
                android:id="@+id/cb_gms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Play Services"
                android:textColor="@color/vortex_text_primary"
                android:buttonTint="@color/vortex_accent"/>

            <!-- Botones de Acci贸n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btn_force_stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FORCE STOP"
                    android:backgroundTint="@color/vortex_accent"
                    android:textColor="#000000"/>

                <Button
                    android:id="@+id/btn_clear_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="CLEAR DATA"
                    android:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Secci贸n: Sistema -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYSTEM"
        android:textColor="@color/vortex_text_secondary"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_reboot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REBOOT DEVICE"
        android:backgroundTint="#212121"
        android:textColor="#FFFFFF"
        app:icon="@drawable/ic_refresh"
        app:iconTint="#FFFFFF"/>

</LinearLayout>
