<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vortex_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/advanced_hooks_title"
            style="@style/Vortex.Text.Title"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Vortex.Card"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_status"
                    app:tint="@color/vortex_accent"
                    android:layout_marginEnd="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use these tools to manage target apps and system power state. Actions are performed with root privileges."
                    style="@style/Vortex.Text.Subtitle"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- App Management -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Management"
            style="@style/Vortex.Text.Title"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Vortex.Card">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TARGET APPS"
                    style="@style/Vortex.Text.SectionHeader"
                    android:layout_marginBottom="12dp" />

                <!-- Toggles -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_snap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Snapchat"
                    android:textColor="@color/vortex_text_primary" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_gplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Google Play Store"
                    android:textColor="@color/vortex_text_primary" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_gservices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Google Play Services"
                    android:textColor="@color/vortex_text_primary"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/vortex_divider"
                    android:layout_marginBottom="16dp" />

                <!-- Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_force_stop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Force Stop"
                        android:layout_marginEnd="8dp"
                        app:icon="@drawable/ic_error_circle"
                        app:iconGravity="textStart"
                        app:backgroundTint="#33FBC02D"
                        android:textColor="#FBC02D"
                        app:iconTint="#FBC02D"
                        app:strokeColor="#80FBC02D"
                        app:strokeWidth="1dp"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_clear_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Clear Data"
                        android:layout_marginStart="8dp"
                        app:icon="@drawable/ic_error_circle"
                        app:iconGravity="textStart"
                        app:backgroundTint="#33CF6679"
                        android:textColor="#CF6679"
                        app:iconTint="#CF6679"
                        app:strokeColor="#80CF6679"
                        app:strokeWidth="1dp"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- System Power -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System"
            style="@style/Vortex.Text.Title"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reboot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reboot Device"
            app:icon="@drawable/ic_refresh"
            app:iconGravity="textStart"
            app:backgroundTint="@color/vortex_card_background"
            android:textColor="@color/vortex_error"
            app:iconTint="@color/vortex_error"
            app:strokeColor="#80CF6679"
            app:strokeWidth="1dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:paddingVertical="12dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
