<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vortex_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false">

        <!-- Modern Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System Status"
            style="@style/Vortex.Text.Title"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <!-- Evasion Score (Modern Circular) -->
        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <!-- Background Track -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:progress="100"
                app:indicatorSize="200dp"
                app:trackThickness="16dp"
                app:trackColor="@color/vortex_card_background"
                app:indicatorColor="@color/vortex_card_background" />

            <!-- Active Score Indicator -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress_evasion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:progress="0"
                app:indicatorSize="200dp"
                app:trackThickness="16dp"
                app:trackColor="@android:color/transparent"
                app:indicatorColor="@color/vortex_accent"
                app:trackCornerRadius="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    style="@style/Vortex.Text.Title"
                    android:textSize="56sp"
                    android:textColor="@color/vortex_text_primary"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EVASION SCORE"
                    style="@style/Vortex.Text.SectionHeader"
                    android:textSize="11sp"
                    android:layout_marginTop="4dp"
                    android:letterSpacing="0.15"/>

            </LinearLayout>
        </FrameLayout>

        <!-- Proxy & IP Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:baselineAligned="false">

            <!-- Proxy Status -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                style="@style/Vortex.Card"
                app:cardBackgroundColor="#1A1D24"
                app:strokeColor="#2A2E36"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_nav_network"
                        app:tint="@color/vortex_proxy_inactive"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PROXY"
                        style="@style/Vortex.Text.SectionHeader"
                        android:textSize="10sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inactive"
                        android:textColor="@color/vortex_proxy_inactive"
                        style="@style/Vortex.Text.Title"
                        android:textSize="14sp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- IP Address -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                style="@style/Vortex.Card"
                app:cardBackgroundColor="#1A1D24"
                app:strokeColor="#2A2E36"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_nav_location"
                        app:tint="@color/vortex_accent"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP ADDRESS"
                        style="@style/Vortex.Text.SectionHeader"
                        android:textSize="10sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="127.0.0.1"
                        android:textColor="@color/vortex_text_primary"
                        style="@style/Vortex.Text.Title"
                        android:textSize="14sp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Configuration Summary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVE CONFIGURATION"
            style="@style/Vortex.Text.SectionHeader"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Vortex.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Device Fingerprint"
                        android:drawablePadding="12dp"
                        app:drawableStartCompat="@drawable/ic_nav_device"
                        app:drawableTint="@color/vortex_text_secondary"
                        style="@style/Vortex.Text.Subtitle"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_current_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        style="@style/Vortex.Text.Title"
                        android:textSize="14sp"
                        android:gravity="end"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#2A2E36"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SIM Operator"
                        android:drawablePadding="12dp"
                        app:drawableStartCompat="@drawable/ic_nav_network"
                        app:drawableTint="@color/vortex_text_secondary"
                        style="@style/Vortex.Text.Subtitle"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_sim_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="US"
                        style="@style/Vortex.Text.Title"
                        android:textSize="14sp"
                        android:gravity="end"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#2A2E36"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Location Status"
                        android:drawablePadding="12dp"
                        app:drawableStartCompat="@drawable/ic_nav_location"
                        app:drawableTint="@color/vortex_text_secondary"
                        style="@style/Vortex.Text.Subtitle"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_location_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        style="@style/Vortex.Text.Title"
                        android:textSize="14sp"
                        android:textColor="@color/vortex_success"
                        android:gravity="end"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
