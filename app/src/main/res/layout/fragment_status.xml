<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vortex_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false">

        <!-- App Bar Simulation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:background="@drawable/bg_border_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VORTEX"
                android:letterSpacing="0.1"
                style="@style/Vortex.Text.Title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/developer_subtitle"
                style="@style/Vortex.Text.Subtitle"
                android:textAllCaps="true"
                android:letterSpacing="0.2"
                android:textSize="10sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Evasion Score -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <!-- Background Track -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:progress="100"
                app:indicatorSize="180dp"
                app:trackThickness="12dp"
                app:trackColor="@color/vortex_card_background"
                app:indicatorColor="@color/vortex_card_background" />

            <!-- Actual Score Indicator -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress_evasion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:progress="0"
                app:indicatorSize="180dp"
                app:trackThickness="12dp"
                app:trackColor="@android:color/transparent"
                app:indicatorColor="@color/vortex_accent"
                app:trackCornerRadius="6dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    style="@style/Vortex.Text.Title"
                    android:textSize="48sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_evasion_score"
                    style="@style/Vortex.Text.SectionHeader"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </FrameLayout>

        <!-- Proxy & IP Cards (New) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:baselineAligned="false">

            <!-- Proxy Status -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                style="@style/Vortex.Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PROXY STATUS"
                        style="@style/Vortex.Text.SectionHeader"
                        android:textSize="10sp"
                        android:layout_marginBottom="8dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_nav_network"
                        app:tint="@color/vortex_proxy_inactive"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inactive"
                        android:textColor="@color/vortex_proxy_inactive"
                        style="@style/Vortex.Text.Title"
                        android:textSize="14sp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- IP Address -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                style="@style/Vortex.Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP ADDRESS"
                        style="@style/Vortex.Text.SectionHeader"
                        android:textSize="10sp"
                        android:layout_marginBottom="8dp"/>

                     <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_nav_network"
                        app:tint="@color/vortex_accent"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="127.0.0.1"
                        android:textColor="@color/vortex_ip_text"
                        style="@style/Vortex.Text.Title"
                        android:textSize="14sp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


        <!-- Profile Summary (Existing) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Vortex.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVE CONFIGURATION"
                    style="@style/Vortex.Text.SectionHeader"
                    android:layout_marginBottom="16dp"
                    app:drawableStartCompat="@drawable/ic_nav_device"
                    android:drawablePadding="8dp"
                    app:drawableTint="@color/vortex_accent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fingerprint"
                        app:drawableStartCompat="@drawable/ic_nav_device"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/vortex_text_secondary"
                        style="@style/Vortex.Text.Subtitle"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text_current_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:gravity="end"
                        style="@style/Vortex.Text.Title"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SIM Country"
                        app:drawableStartCompat="@drawable/ic_nav_network"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/vortex_text_secondary"
                        style="@style/Vortex.Text.Subtitle"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text_sim_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="US"
                        android:gravity="end"
                        style="@style/Vortex.Text.Title"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Location"
                        app:drawableStartCompat="@drawable/ic_nav_location"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/vortex_text_secondary"
                        style="@style/Vortex.Text.Subtitle"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text_location_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:gravity="end"
                        style="@style/Vortex.Text.Title"
                        android:textSize="14sp"
                        android:textColor="@color/vortex_success"/>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
