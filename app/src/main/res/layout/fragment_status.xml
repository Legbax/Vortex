<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/vortex_background">

    <!-- Header -->
    <TextView
        style="@style/Vortex.Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_status"
        android:layout_marginBottom="24dp" />

    <!-- Evasion Score -->
    <com.google.android.material.card.MaterialCardView
        style="@style/Vortex.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress_evasion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:progress="0"
                android:max="100"
                app:indicatorSize="120dp"
                app:trackThickness="12dp"
                app:indicatorColor="@color/vortex_accent"
                app:trackColor="@color/vortex_accent_20"
                xmlns:app="http://schemas.android.com/apk/res-auto"/>

            <TextView
                android:id="@+id/text_score"
                style="@style/Vortex.Text.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textSize="32sp" />

            <TextView
                style="@style/Vortex.Text.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progress_evasion"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="@string/status_evasion_score" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Details -->
    <com.google.android.material.card.MaterialCardView
        style="@style/Vortex.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/Vortex.Text.SectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active Configuration"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    style="@style/Vortex.Text.Subtitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/status_device_profile"/>
                <TextView
                    android:id="@+id/text_current_profile"
                    style="@style/Vortex.Text.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Redmi 9"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/Vortex.Text.Subtitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Network Identity"/>
                <TextView
                    android:id="@+id/text_current_carrier"
                    style="@style/Vortex.Text.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T-Mobile"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
