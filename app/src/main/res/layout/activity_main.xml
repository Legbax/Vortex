<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/vortex_background">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIconTint="@color/vortex_text_secondary"
        app:tabTextColor="@color/vortex_text_secondary"
        app:tabSelectedTextColor="@color/vortex_accent"
        app:tabIndicatorColor="@color/vortex_accent"
        app:tabIndicatorHeight="2dp"
        app:tabRippleColor="@color/vortex_accent_20"
        android:background="@color/vortex_card_background"
        app:tabInlineLabel="false"
        app:tabPaddingStart="4dp"
        app:tabPaddingEnd="4dp" />

</LinearLayout>
