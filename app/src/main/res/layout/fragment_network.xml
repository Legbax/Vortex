<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/vortex_background">

    <TextView
        style="@style/Vortex.Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_network"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_generated_info"
        style="@style/Vortex.Text.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/vortex_card_background"
        android:padding="12dp"
        android:text="Select a carrier to generate IDs" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_carriers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false" />

</LinearLayout>
