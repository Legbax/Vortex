<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/vortex_background" android:orientation="vertical" android:padding="16dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Network &amp; Proxy" style="@style/Vortex.Text.Title" android:layout_marginBottom="16dp" />

    <com.google.android.material.tabs.TabLayout android:id="@+id/tab_network_sub"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:tabMode="fixed" android:background="@android:color/transparent"
        app:tabIndicatorColor="@color/vortex_accent" app:tabSelectedTextColor="@color/vortex_accent"
        app:tabTextColor="@color/vortex_text_secondary"/>

    <androidx.viewpager2.widget.ViewPager2 android:id="@+id/vp_network_sub"
        android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="8dp"/>
</LinearLayout>
