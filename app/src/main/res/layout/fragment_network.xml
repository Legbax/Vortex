<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vortex_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Network"
            android:textColor="@color/vortex_text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- WiFi Toggle Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/vortex_card_background"
            app:cardCornerRadius="16dp"
            app:strokeColor="#1AFFFFFF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="#332196F3">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_network"
                        app:tint="#42A5F5" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WiFi Connection"
                        android:textColor="@color/vortex_text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simulate WiFi state"
                        android:textColor="@color/vortex_text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:trackTint="@color/vortex_accent_25"
                    app:thumbTint="@color/vortex_accent"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Carrier Simulation -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/vortex_card_background"
            app:cardCornerRadius="16dp"
            app:strokeColor="#1AFFFFFF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="CARRIER SIMULATION"
                    android:textColor="@color/vortex_text_secondary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_sim_operator"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Sim Operator Name"
                    app:boxBackgroundColor="#00000000"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_sim_operator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="T-Mobile"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_sim_country"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:hint="ISO"
                        app:boxBackgroundColor="#00000000"
                        app:boxStrokeColor="@color/vortex_accent"
                        app:hintTextColor="@color/vortex_accent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_sim_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="us"
                            android:textColor="@color/vortex_text_primary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_preset_usa"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="USA (T-Mobile)"
                        android:textColor="@color/vortex_text_secondary"
                        app:strokeColor="#33FFFFFF" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Other Network Fields (Preserved but styled) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/vortex_card_background"
            app:cardCornerRadius="16dp"
            app:strokeColor="#1AFFFFFF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="IDENTIFIERS"
                    android:textColor="@color/vortex_text_secondary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_imsi"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="IMSI"
                    app:boxBackgroundColor="#00000000"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_imsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_iccid"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="ICCID"
                    app:boxBackgroundColor="#00000000"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_iccid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_phone_number"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Phone Number"
                    app:boxBackgroundColor="#00000000"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Restoring Missing Network Fields -->
                 <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_mcc_mnc"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="MCC/MNC"
                    app:boxBackgroundColor="#00000000"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_mcc_mnc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_wifi_ssid"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="WiFi SSID"
                    app:boxBackgroundColor="#00000000"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_wifi_ssid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_wifi_bssid"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="WiFi BSSID"
                    app:boxBackgroundColor="#00000000"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_wifi_bssid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_wifi_mac"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="WiFi MAC"
                    app:boxBackgroundColor="#00000000"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_wifi_mac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_bt_mac"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Bluetooth MAC"
                    app:boxBackgroundColor="#00000000"
                    app:boxStrokeColor="@color/vortex_accent"
                    app:hintTextColor="@color/vortex_accent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bt_mac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vortex_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_randomize_network"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@color/vortex_accent"
            android:text="Randomize Network"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_refresh"
            app:iconGravity="textStart"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE SETTINGS"
            android:backgroundTint="@color/vortex_accent"
            android:textColor="@color/vortex_text_primary"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/vortex_accent"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
