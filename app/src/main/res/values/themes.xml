<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Vortex" parent="Theme.Material3.Dark.NoActionBar">
        <!-- System Colors -->
        <item name="android:statusBarColor">@color/vortex_background</item>
        <item name="android:windowBackground">@color/vortex_background</item>
        <item name="android:navigationBarColor">@color/vortex_nav_background</item>

        <!-- Material 3 Palette Mapping -->
        <item name="colorPrimary">@color/vortex_accent</item>
        <item name="colorOnPrimary">@color/vortex_background</item>

        <item name="colorSecondary">@color/vortex_text_secondary</item>
        <item name="colorOnSecondary">@color/vortex_text_primary</item>

        <item name="colorSurface">@color/vortex_card_background</item>
        <item name="colorOnSurface">@color/vortex_text_primary</item>

        <item name="colorError">@color/vortex_error</item>
        <item name="colorOnError">@color/vortex_text_primary</item>

        <!-- Component Specifics -->
        <item name="cardBackgroundColor">@color/vortex_card_background</item>
    </style>
</resources>