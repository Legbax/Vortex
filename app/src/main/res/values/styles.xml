<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Vortex.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/vortex_card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/vortex_accent_20</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Base Style to prevent "resource style/Vortex.Text not found" error -->
    <style name="Vortex.Text" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Vortex.Text.Title">
        <item name="android:textColor">@color/vortex_text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Vortex.Text.Subtitle">
        <item name="android:textColor">@color/vortex_text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Vortex.Text.SectionHeader">
        <item name="android:textColor">@color/vortex_accent</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Vortex.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/vortex_accent_20</item>
        <item name="hintTextColor">@color/vortex_text_secondary</item>
        <item name="android:textColorHint">@color/vortex_text_secondary</item>
        <item name="boxBackgroundColor">@color/vortex_card_background</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="Vortex.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/vortex_accent</item>
    </style>
</resources>
