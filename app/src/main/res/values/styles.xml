<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Vortex.Text.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/vortex_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Vortex.Text.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/vortex_text_secondary</item>
    </style>

    <style name="Vortex.Text.SectionHeader" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/vortex_text_secondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="Vortex.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/vortex_card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/vortex_divider</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Vortex.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/vortex_accent</item>
        <item name="hintTextColor">@color/vortex_accent</item>
        <item name="android:textColorHint">@color/vortex_text_secondary</item>
        <item name="startIconTint">@color/vortex_text_secondary</item>
    </style>

    <style name="Vortex.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/vortex_accent</item>
        <item name="android:textColor">@color/vortex_background</item>
        <item name="iconTint">@color/vortex_background</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <style name="Vortex.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/vortex_accent</item>
        <item name="iconTint">@color/vortex_accent</item>
    </style>
</resources>